# =========================================
# Postways CI Environment (.env.ci.example)
# Used by GitHub Actions as POSTWAYS_CI_DOTENV
# =========================================

# Required Django secret key (can be any non-empty value in CI)
SECRET_KEY=ci-not-secret-but-required

# -------------------------------
# PostgreSQL (GitHub Actions service)
# -------------------------------
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=postgres
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# -------------------------------
# Redis (GitHub Actions service)
# -------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379

# -------------------------------
# Email (CI dummy values)
# -------------------------------
EMAIL_HOST_PASSWORD=dummy

# -------------------------------
# App-specific variables
# -------------------------------
WEEKLY_REPORT_RECIPIENTS=test@example.com
